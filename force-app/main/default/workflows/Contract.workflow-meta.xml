    <rules>
        <fullName>Contract Total 0 update renewal</fullName>
        <actions>
            <name>Update_Reneweal_Manual</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Contract.Total_Grand_Total__c</field>
            <operation>equals</operation>
            <value>INR 0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.POC__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Renewal Reminder  60%28Migrated%29</fullName>
        <active>false</active>
        <formula>!ISBLANK(EndDate) &amp;&amp; ISPICKVAL(Status  , &apos;Activated&apos;) &amp;&amp; POC__c = &quot;No&quot; &amp;&amp; EndDate -  TODAY() &gt; 60</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Renewal_reminder_after_60_days</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Contract.EndDate</offsetFromField>
            <timeLength>-60</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>

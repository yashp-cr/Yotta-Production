<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Number_of_hours_cannot_be_more_than_24</fullName>
    <active>true</active>
    <errorConditionFormula>No_of_hours_per_month__c &gt; 24 || No_of_hours_per_month__c =0</errorConditionFormula>

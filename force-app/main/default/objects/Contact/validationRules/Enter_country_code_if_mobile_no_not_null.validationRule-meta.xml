<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enter_country_code_if_mobile_no_not_null</fullName>
    <active>false</active>
    <errorConditionFormula>AND(NOT(ISBLANK( MobilePhone )), ISPICKVAL( Country_Code__c, &quot;&quot; ))</errorConditionFormula>
    <errorDisplayField>Country_Code__c</errorDisplayField>
    <errorMessage>Please select Country Code for entered Mobile number.</errorMessage>
</ValidationRule>

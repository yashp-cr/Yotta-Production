<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Endpoint_Backup_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL(   Endpoint_Backup__c , &apos;Yes&apos;),
ISBLANK(   If_Endpoint_Backup_is_present__c )
)</errorConditionFormula>
    <errorDisplayField>If_Endpoint_Backup_is_present__c</errorDisplayField>
    <errorMessage>Please Select Endpoint Backup</errorMessage>
</ValidationRule>

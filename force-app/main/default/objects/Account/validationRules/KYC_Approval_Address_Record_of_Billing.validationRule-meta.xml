<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>KYC_Approval_Address_Record_of_Billing</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Submit_for_KYC_Approval__c),
Submit_for_KYC_Approval__c,
Billing_Address_Count__c &lt; 1)</errorConditionFormula>
    <errorMessage>Please add the billing address for the account before submitting it for KYC approval</errorMessage>
</ValidationRule>

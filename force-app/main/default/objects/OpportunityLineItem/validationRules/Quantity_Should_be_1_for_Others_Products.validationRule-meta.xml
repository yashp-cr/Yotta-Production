<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Quantity_Should_be_1_for_Others_Products</fullName>
    <active>true</active>
    <errorConditionFormula>CONTAINS( RIGHT(Product2.Name , 6), &quot;Others&quot;) &amp;&amp; Quantity &lt;&gt; 1</errorConditionFormula>
    <errorMessage>Quantity can only be 1 for &quot;Others&quot; products</errorMessage>
</ValidationRule>

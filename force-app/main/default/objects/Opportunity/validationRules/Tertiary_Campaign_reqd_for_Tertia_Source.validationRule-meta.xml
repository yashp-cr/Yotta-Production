<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Tertiary_Campaign_reqd_for_Tertia_Source</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  ISPICKVAL( TertiarySource__c , &apos;Marketing&apos;),
  ISBLANK( TertiaryCampaignSource__c )
)</errorConditionFormula>
    <errorDisplayField>TertiaryCampaignSource__c</errorDisplayField>
    <errorMessage>Tertiary Campaign Source is required for Tertiary Marketing Source</errorMessage>
</ValidationRule>

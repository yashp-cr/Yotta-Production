<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Second_Campaign_reqd_for_Second_Source</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  ISPICKVAL( SecondarySource__c  , &apos;Marketing&apos;),
  ISBLANK(  SecondaryCampaignSource__c  )
)</errorConditionFormula>
    <errorDisplayField>SecondaryCampaignSource__c</errorDisplayField>
    <errorMessage>Secondary Campaign Source is required for Secondary Marketing Source</errorMessage>
</ValidationRule>
